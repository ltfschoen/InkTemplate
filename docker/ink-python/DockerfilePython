FROM python:3.11-slim-buster

RUN apt-get update && \
    apt-get install -y git vim curl wget unzip 

WORKDIR /app

COPY ./docker/ink-python/requirements.txt ./

RUN apt-get update && \
    pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

COPY ./docker .
COPY ./dapps .
COPY ./target .

CMD tail -f /dev/null
